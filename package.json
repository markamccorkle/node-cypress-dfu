{
  "name": "cypress-dfu",
  "version": "1.0.0",
  "description": "Library for performing DFU updates to Cypress BLE modules running the Cypress Bootloader - Ionic Capacitor compatible",
  "main": "index.js",
  "author": "markamccorkle",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/markamccorkle/node-cypress-dfu.git"
  },
  "keywords": [
    "cypress",
    "dfu",
    "firmware",
    "ble",
    "bluetooth",
    "ionic",
    "capacitor",
    "ota",
    "bootloader"
  ],
  "dependencies": {
    "crc": "^3.8.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
